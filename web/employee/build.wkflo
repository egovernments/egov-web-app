def build(path, ci_image) {
    stage("Build") {
        docker.image("egovio/ci-react:v8.4.0-lerna-v2").inside {
	    sh "cd ${path}/rainmaker && rm -rf node_modules ../build/* && npm install babel-cli && lerna bootstrap && npm run build-css && babel dev-packages/egov-ui-kit-dev/src --out-dir packages/egov-ui-kit --copy-files && babel dev-packages/egov-ui-framework-core/src/ --out-dir packages/egov-ui-framework --copy-files && babel dev-packages/pgr-employee-dev/src --out-dir packages/pgr-employee/ --copy-files &&  babel dev-packages/pt-employee-dev/src --out-dir packages/pt-employee --copy-files && cd packages/employee &&  npm run build && cp -r build ../../../employee/";
        }
    }
}

return this;
