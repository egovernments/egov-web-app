def build(path, ci_image) {
    stage("Build") {
        docker.image("egovio/ci-react:v8.15.0-alpine").inside {
            sh "cd ${path}/rainmaker && yarn config set registry http://egov-micro-dev.egovernments.org/verdaccio && REACT_APP_DEFAULT_TENANT_ID=kar && yarn run prod:employee && cp -r packages/employee/build ../employee/";
        }
    }
}

return this;
