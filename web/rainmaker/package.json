{
  "name": "rainmaker",
  "version": "0.0.1",
  "main": "",
  "repository": "",
  "license": "egov",
  "private": true,
  "scripts": {
    "clean": "lerna clean -f --yes && rm -rf node_modules",
    "reset": "npm run clean && npm i",
    "dev:citizen": "cd packages/citizen && npm start",
    "dev:employee": "cd packages/employee && npm start",
    "prod:citizen": "cd packages/citizen && npm run build",
    "prod:employee": "cd packages/employee && npm run build",
    "egov-ui-kit-components": "babel dev-packages/egov-ui-kit-dev/src/components --out-dir packages/egov-ui-kit/components --copy-files",
    "egov-ui-kit-redux": "babel dev-packages/egov-ui-kit-dev/src/redux --out-dir packages/egov-ui-kit/redux --copy-files",
    "egov-ui-kit-utils": "babel dev-packages/egov-ui-kit-dev/src/utils --out-dir packages/egov-ui-kit/utils --copy-files",
    "egov-ui-kit-commons": "npm run build-css && babel dev-packages/egov-ui-kit-dev/src/common --out-dir packages/egov-ui-kit/common --copy-files",
    "egov-ui-kit-custom-icons": "babel dev-packages/egov-ui-kit-dev/src/custom-icons --out-dir packages/egov-ui-kit/custom-icons --copy-files",
    "egov-ui-kit-hocs": "babel dev-packages/egov-ui-kit-dev/src/hocs --out-dir packages/egov-ui-kit/hocs --copy-files",
    "egov-ui-kit-assets": "babel dev-packages/egov-ui-kit-dev/src/assets --out-dir packages/egov-ui-kit/assets --copy-files",
    "egov-ui-kit": "npm run egov-ui-kit-components && npm run egov-ui-kit-redux && npm run egov-ui-kit-utils && npm run egov-ui-kit-commons && npm run egov-ui-kit-custom-icons && npm run egov-ui-kit-hocs && npm run egov-ui-kit-assets",
    "build-css": "node-sass-chokidar dev-pakages/egov-ui-kit-dev/src -o dev-packages/egov-ui-kit-dev/src"
  },
  "devDependencies": {
    "lerna": "^2.11.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1"
  },
  "dependencies": {
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3"
  }
}
