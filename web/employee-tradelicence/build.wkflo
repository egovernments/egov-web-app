def build(path, ci_image) {
    stage("Build") {
        docker.image("egovio/ci-react:v8.4.0-lerna").inside {
            sh "cd ${path}/rainmaker && rm -rf node_modules && npm set registry http://egov-micro-dev.egovernments.org/verdaccio && npm i babel-runtime && npm i babel-cli && npm run egov-ui-framework && lerna bootstrap && cd packages/egov-tradelicence-core && npm run build && cp -r build ../../../employee-tradelicence/";
        }
    }
}

return this;
