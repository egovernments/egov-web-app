def build(path, ci_image) {
    stage("Build") {
        docker.image("egovio/ci-react:v8.4.0-lerna").inside {
            sh "cd ${path}/rainmaker && rm -rf node_modules && npm set registry http://egov-micro-dev.egovernments.org/verdaccio &&  lerna bootstrap && cd packages/rainmaker-citizen && npm run build && cp -r build ../../../rainmaker-citizen/";
        }
    }
}

return this;
