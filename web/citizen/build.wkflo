def build(path, ci_image) {
    stage("Build") {
        docker.image("egovio/ci-react:v8.15.0-alpine").inside {
            sh "cd ${path}/rainmaker && yarn config set registry http://egov-micro-dev.egovernments.org/verdaccio && yarn run prod:citizen && cp -r packages/citizen/build ../citizen/";
        }
    }
}

return this;
